{
	"extends": "plugin:vue/essential",
	"env": {
		"browser": true
	},
	"rules": {
		"semi": [
			"error",
			"never"
		],
		"indent": [
			"error", 2
		],
		"space-before-function-paren": [
			"error",
			"never"
		],
		"quotes": "off",
		"eqeqeq": "off",
		"no-throw-literal": "off",
		"camelcase": "off",
		"no-unused-vars": "off",
		"no-debugger": "off",
		"arrow-parens": [
			"error",
			"as-needed"
		],
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"no-mixed-operators": "off",
		"object-curly-spacing": [
			"error",
			"always"
		],
		"brace-style": [
			"error",
			"1tbs",
			{
				"allowSingleLine": false
			}
		],
		"curly": [
			"error",
			"multi-or-nest",
			"consistent"
		]
	}
}
